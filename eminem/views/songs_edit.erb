<h1>Edit Song</h1>

<form action="/songs/<%=@song['id']%>" method="post">
  <label>Name: </label>
  <input type="text" name="name" value="<%= @song['name']%>" placeholder="song name" required autofocus>
  <label>youtube Url: </label>
  <input type="text" name="youtube_url" value="<%= @song['youtube_url']%>" required placeholder="https://">

  <label>Choose Album</label>
  <select  name="album_id">
    <option></option>
    <% Album.all.each do |album| %>
    <option value ="<%= album.id %>" <%="selected" if album.id==@song.album_id %>> <%= album.name %> </option>
    <% end %>
  </select>

  <button>Update</button>
</select>
</form>
